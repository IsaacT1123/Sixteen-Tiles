        <ImageButton
            android:id="@+id/inGameMenuButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:background="#5B9BD5"
            android:src="@drawable/menu2"
            android:contentDescription="Main Menu" />

    </RelativeLayout>

    <TextView
        android:id="@+id/vibTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:text="Vibration"
        android:textColor="#5B9BD5"
        android:textSize="40dp" />

    <ImageButton
        android:id="@+id/vibButtonOn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/vibTextView"
        android:layout_marginLeft="105dp"
        android:layout_alignTop="@id/vibTextView"

        android:background="#5B9BD5"
        android:src="@drawable/checked"
        android:visibility="visible" />

    <TextView
        android:id="@+id/soundTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="185dp"
        android:layout_alignLeft="@id/vibTextView"
        android:text="SFX"
        android:textColor="#5B9BD5"
        android:textSize="40dp" />

    <ImageButton
        android:id="@+id/soundButtonOn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/soundTextView"
        android:layout_toRightOf="@id/soundTextView"
        android:layout_alignLeft="@id/vibButtonOn"
        android:background="#5B9BD5"
        android:src="@drawable/checked"
        android:visibility="visible" />
